<li{% if (module['id'] == selectedModule)  %} class="active{% if (module['menus']|length < 2)  %} selected{% endif %}"{% endif %}>

    {% if (module['menus']|length > 1) or (modules[module['id']] is defined) %}
        <a title="{{ module['name'] }}" class="has-arrow" href="#" aria-expanded="{{ module['id'] == selectedModule }}"><i
            class="fa {{ module['icon'] }}"></i><span class="nav-label ml-2">{{ module['name'] }}</span></a>
        <ul aria-expanded="{{ module['id'] == selectedModule }}">

            {% for menu in module['menus'] %}
                <li{% if (menu['id'] == selectedMenu) %} class="active selected"{% endif %}>
                    <a title="{{ menu['name'] }}" href="{{ menu['url'] }}">{{ menu['name'] }}</a></li>
            {% endfor %}

            {% if modules[module['id']] is defined %}
                {% for module in modules[module['id']] %}
                    {% include 'AppBundle:partial:navbar-module-menus.html.twig' with {
                        module: module,
                        selectedModule: _conf['selectedMenu']['module'][1],
                        moduleLevel: 'third'
                    } %}
                {% endfor %}
            {%  endif %}

        </ul>
    {% else %}
        <a title="{{ module['name'] }}" href="{{ module['menus'][0]['url'] }}"><i
            class="fa {{ module['icon'] }}"></i><span class="nav-label ml-2">{{ module['name'] }}</span></a>
    {% endif %}

</li>