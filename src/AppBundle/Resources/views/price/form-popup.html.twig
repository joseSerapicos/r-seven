{% extends 'AppBundle:form:form-popup.html.twig' %}

{% block body %}
    {% set form = (form is defined ? form : (_form is defined ? _form : null)) %}
    {% set fields = (fields is defined ? fields : (_conf['fields'] is defined ? _conf['fields'] : null)) %}

    {% if (form and fields) %}
        {% for field in fields['form'] %}
            {% if field == 'marginMethod' %}
                {% set fieldsForm = ((fields['metadata'][field]['parent'] is defined and
                    fields['metadata'][field]['parent'] is not null)
                        ? form[fields['metadata'][field]['parent']]
                        : form
                ) %}
                <div class="row form-group">
                    {% include 'AppBundle:form:label.html.twig' with {
                        'formField': fieldsForm['marginValue'],
                        'metadata': fields['metadata']['marginValue']
                    } %}
                    <div class="col-sm-10"><div class="row">
                        <div class="col-sm-6">
                            {% include 'AppBundle:form:input.html.twig' with {
                                'field': field,
                                'formField': fieldsForm[field],
                                'metadata': fields['metadata'][field]
                            } %}
                        </div>
                        <div class="col-sm-6">
                            {% include 'AppBundle:form:input.html.twig' with {
                                'field': 'marginValue',
                                'formField': fieldsForm['marginValue'],
                                'metadata': fields['metadata']['marginValue']
                            } %}
                        </div>
                    </div></div>
                </div>
            {% elseif field != 'marginValue' %}
                {% include 'AppBundle:form:field.html.twig' with {
                    'field': field,
                    'metadata': fields['metadata'][field],
                    'form': form
                } %}
            {% endif %}
        {% endfor %}
    {% endif %}
{% endblock %}