{% extends 'AppBundle:data-box:base.html.twig' %}
{% block body_container %}
    <div class="row">
        <div class="col col-md-6 pb-3"
             *ngFor="let obj of _dataService.getProviderAttr('objects'); let index = index">
            <div class="card"
                 [class.border-info]="obj['type'] == 'INFO'"
                 [class.border-warning]="obj['type'] == 'WARNING'"
                 [class.border-danger]="obj['type'] == 'DANGER'">
                <div class="card-header"
                     [class.bg-light]="obj['type'] == 'DEFAULT'"
                     [class.bg-info]="obj['type'] == 'INFO'"
                     [class.bg-warning]="obj['type'] == 'WARNING'"
                     [class.bg-danger]="obj['type'] == 'DANGER'"
                     [class.text-white]="obj['type'] != 'DEFAULT'">
                    <i class="fa"
                       [class.fa-check-circle]="obj['type'] == 'DEFAULT'"
                       [class.fa-info-circle]="obj['type'] == 'INFO'"
                       [class.fa-warning]="obj['type'] == 'WARNING'"
                       [class.fa-minus-circle]="obj['type'] == 'DANGER'"></i>&nbsp;{% verbatim %}{{obj['name']}}{% endverbatim %}
                </div>
                <div class="card-body">
                    <p>{% verbatim %}{{obj['description']}}{% endverbatim %}</p>
                </div>
                <div class="card-footer text-right">
                    <span class="txt-align-r actions no-user-select text-secondary"
                          (click)="triggerAction($event)">
                        <ng-template ngFor let-action [ngForOf]="_actionsService.getDetailActions()">
                            <a *ngIf="_actionsService.getActionAttr(action, 'isEnabled')"
                               [ngClass]="[_actionsService.getActionAttr(action, 'icon')]"
                               class="fa"
                               [attr.data-action]="action"
                               [attr.data-value]="index"></a>
                        </ng-template>
                    </span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}