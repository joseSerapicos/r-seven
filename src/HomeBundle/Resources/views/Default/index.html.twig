{% extends 'AppBundle::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets filter="scssphp" output="assets/home/default/index/css/all.css"
        '@fullcalendar_css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block head_javascripts %}
    {{ parent() }}
    {% set userCalendarData = render(controller(
        'UserBundle:UserCalendar:dataForHome'
    )) %}
    <script>
        _app.dependency.userCalendar = {{ userCalendarData|raw }};
    </script>
{% endblock %}

{% block header_container %}
    <div class="row">
        <div class="col-sm-12">
            <h2>Welcome {{ app.session.get('_app.user')['name'] }}</h2>
        </div>
    </div>
{% endblock %}

{% block body_container %}
    <div class="row">
        <div class="col-sm-8">
            <div class='js_calendarComponent'></div>
        </div>
    </div>
{% endblock %}

{% block vendor_javascripts %}
    {{ parent() }}

    {% javascripts output="assets/home/default/index/js/vendor.js"
        '@moment_js'
        '@fullcalendar_js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block local_javascripts %}
    {% javascripts output="assets/home/default/index/js/local.js"
        '@HomeBundle/Resources/public/default/index/webpack_generated/common.js'
        '@HomeBundle/Resources/public/default/index/webpack_generated/app.js'
        '@HomeBundle/Resources/public/default/index/webpack_generated/main.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}