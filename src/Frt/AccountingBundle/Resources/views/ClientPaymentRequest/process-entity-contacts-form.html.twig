{% extends 'AppBundle:form:form.html.twig' %}

{% block fields %}
    {% set form = (form is defined ? form : (_form is defined ? _form : null)) %}
    {% set fields = (fields is defined ? fields : (_conf['fields'] is defined ? _conf['fields'] : null)) %}

    {% if (form and fields) %}
        {% for field in fields['form'] %}
            {% if field == 'entityEmailObj' %}
                {% include 'AppBundle:form:field.html.twig' with {
                'field': field,
                'metadata': fields['metadata'][field],
                'form': form
                } %}
                <ng-template [ngIf]="_formService.getObject()['entityEmailObj']">
                    email
                </ng-template>
            {% elseif field == 'entityAddressObj' %}
                {% include 'AppBundle:form:field.html.twig' with {
                'field': field,
                'metadata': fields['metadata'][field],
                'form': form
                } %}
                <ng-template [ngIf]="_formService.getObject()['entityAddressObj']">
                    address
                </ng-template>
            {% endif %}
        {% endfor %}
    {% endif %}
{% endblock %}