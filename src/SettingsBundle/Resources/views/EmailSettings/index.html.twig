{% extends 'AppBundle::base.html.twig' %}

{% block head_javascripts %}
    {{ parent() }}

    {% set emailTemplateData = render(controller(
        'SettingsBundle:EmailTemplate:data',
        {'responseType': 'json'}
    )) %}

    {% set emailTemplateDefaultData = render(controller(
        'SettingsBundle:EmailTemplateDefault:data',
        {'responseType': 'json'}
    )) %}
    <script>
        _app.dependency.emailTemplate = {{ emailTemplateData|raw }};
        _app.dependency.emailTemplateDefault = {{ emailTemplateDefaultData|raw }};
    </script>
{% endblock %}

{% block header %}{% endblock %}

{% block body_container %}
    <div class="js_appBasics"></div>
    <div id="js_main"></div>
{% endblock %}

{%  block javascripts %}
    {% javascripts output="assets/settings/email-settings/index/js/local.js"
        '@SettingsBundle/Resources/public/email-settings/index/ts/dist/inline.bundle.js'
        '@SettingsBundle/Resources/public/email-settings/index/ts/dist/polyfills.bundle.js'
        '@SettingsBundle/Resources/public/email-settings/index/ts/dist/vendor.bundle.js'
        '@SettingsBundle/Resources/public/email-settings/index/ts/dist/main.bundle.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}