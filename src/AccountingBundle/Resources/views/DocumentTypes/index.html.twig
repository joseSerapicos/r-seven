{% extends 'AppBundle::base.html.twig' %}

{% block head_javascripts %}
    {{ parent() }}

    {% set clientDocumentTypeData = render(controller(
        'AccountingBundle:ClientDocumentType:data',
        {'responseType': 'json'}
    )) %}

    {% set supplierDocumentTypeData = render(controller(
        'AccountingBundle:SupplierDocumentType:data',
        {'responseType': 'json'}
    )) %}
    <script>
        _app.dependency.clientDocumentType = {{ clientDocumentTypeData|raw }};
        _app.dependency.supplierDocumentType = {{ supplierDocumentTypeData|raw }};
    </script>
{% endblock %}

{% block header %}{% endblock %}

{%  block javascripts %}
    {% javascripts output="assets/accounting/document-types/index/js/local.js"
        '@AccountingBundle/Resources/public/document-types/index/ts/dist/inline.bundle.js'
        '@AccountingBundle/Resources/public/document-types/index/ts/dist/polyfills.bundle.js'
        '@AccountingBundle/Resources/public/document-types/index/ts/dist/vendor.bundle.js'
        '@AccountingBundle/Resources/public/document-types/index/ts/dist/main.bundle.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}