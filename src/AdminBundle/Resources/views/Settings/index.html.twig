{% extends 'AppBundle::base.html.twig' %}

{% block head_javascripts %}
    {{ parent() }}

    {% set entitySettingData = render(controller(
        'EntitiesBundle:EntitySetting:data'
    )) %}

    {% set clientSettingData = render(controller(
        'EntitiesBundle:ClientSetting:data'
    )) %}

    {% set supplierSettingData = render(controller(
        'EntitiesBundle:SupplierSetting:data'
    )) %}
    <script>
        _app.dependency.entitySetting = {{ entitySettingData|raw }};
        _app.dependency.clientSetting = {{ clientSettingData|raw }};
        _app.dependency.supplierSetting = {{ supplierSettingData|raw }};
    </script>
{% endblock %}

{% block header %}{% endblock %}

{% block body_container %}
    <div id="js_main"></div>
{% endblock %}

{% block local_javascripts %}
    {% javascripts output="assets/admin/settings/index/js/local.js"
        '@AdminBundle/Resources/public/settings/index/webpack_generated/common.js'
        '@AdminBundle/Resources/public/settings/index/webpack_generated/app.js'
        '@AdminBundle/Resources/public/settings/index/webpack_generated/main.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}