{% extends 'AppBundle::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets filter="scssphp" output="assets/admin/store/detail/css/all.css"
        '@AppBundle/Resources/public/scss/select-box.scss'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block head_javascripts %}
    {{ parent() }}

    {% set parentId = _conf['object']['id'] %}

    {% set storePhoneData = render(controller(
        'AdminBundle:StorePhone:dataChild',
        {'parents': {'store': parentId}}
    )) %}

    {% set storeEmailData = render(controller(
        'AdminBundle:StoreEmail:dataChild',
        {'parents': {'store': parentId}}
    )) %}

    {% set storeLinkData = render(controller(
        'AdminBundle:StoreLink:dataChild',
        {'parents': {'store': parentId}}
    )) %}
    <script>
        _app.dependency.storePhone = {{ storePhoneData|raw }};
        _app.dependency.storeEmail = {{ storeEmailData|raw }};
        _app.dependency.storeLink = {{ storeLinkData|raw }};
    </script>
{% endblock %}

{% block header_container %}
    {% include 'AppBundle:partial:entity-detail.html.twig' with {
        'object': _conf['object'],
        'fields': _conf['fields']
    } %}
{% endblock %}

{% block body_container %}
    <div id="js_main"></div>
{% endblock %}

{% block local_javascripts %}
    {% javascripts output="assets/admin/store/detail/js/local.js"
        '@AdminBundle/Resources/public/store/detail/webpack_generated/common.js'
        '@AdminBundle/Resources/public/store/detail/webpack_generated/app.js'
        '@AdminBundle/Resources/public/store/detail/webpack_generated/main.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}