{% extends 'AppBundle:form:form.html.twig' %}

{% block fields %}
    {% set form = (form is defined ? form : (_form is defined ? _form : null)) %}
    {% set fields = (fields is defined ? fields : (_conf['fields'] is defined ? _conf['fields'] : null)) %}

    {% if (form and fields) %}
        {% for field in fields['form'] %}
            {% if field == 'confirmationStatus' %}
                <div class="form-group">
                    {% include 'AppBundle:form:label.html.twig' with {
                        'formField': form[field],
                        'metadata': fields['metadata'][field]
                    } %}
                    <div class="col-sm-10"
                         [hidden]="!_formService.getObject()['isEnabledAllot'] || !_formService.getObject()['isAutoAllot']">
                        {% include 'AppBundle:form:input.html.twig' with {
                            'field': field,
                            'formField': form[field],
                            'metadata': fields['metadata'][field]
                        } %}
                    </div>
                    <div class="col-sm-10"
                         [hidden]="_formService.getObject()['isEnabledAllot'] && _formService.getObject()['isAutoAllot']">
                        {% include 'AppBundle:form:input.html.twig' with {
                            'field': 'confirmationStatusManual',
                            'formField': form['confirmationStatusManual'],
                            'metadata': fields['metadata']['confirmationStatusManual']
                        } %}
                    </div>
                </div>
                <template [ngIf]="_formService.getObject()['isEnabledAllot']">
                    {% include 'AppBundle:form:field.html.twig' with {
                        'field': 'isAutoAllot',
                        'metadata': fields['metadata']['isAutoAllot'],
                        'form': form
                    } %}
                </template>
            {% elseif (field not in ['isAutoAllot', 'confirmationStatusManual']) %}
                {% include 'AppBundle:form:field.html.twig' with {
                    'field': field,
                    'metadata': fields['metadata'][field],
                    'form': form
                } %}
            {% endif %}
        {% endfor %}
    {% endif %}

    <template [ngIf]="_formService.getObject()['isEnabledAllot'] && _dataService.getProviderAttr('localData') && _dataService.getProviderAttr('localData')['allot']">
        <div [hidden]="!_formService.getObject()['isAutoAllot']">{% include 'BookingBundle:BaseBookingService:add-allot-tip.html.twig' %}</div>
    </template>
{% endblock %}