{% extends 'AppBundle::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets output="assets/admin/user-group-acl/detail/css/local.css"
    '@BckAdminBundle/Resources/public/user-group-acl/detail/scss/dist/styles.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block head_javascripts %}
    {{ parent() }}
    {% set userGroupAclMenuData = render(controller(
        'BckAdminBundle:UserGroupAclMenu:dataChild',
        {'parents': {'userGroupAcl': _conf['object']['id']}, 'responseType': 'json'}
    )) %}

    {% set userGroupAclUserData = render(controller(
        'BckAdminBundle:UserGroupAclUser:dataChild',
        {'parents': {'userGroupAcl': _conf['object']['id']}, 'responseType': 'json'}
    )) %}
    <script>
        _app.dependencies.userGroupAclMenu = {{ userGroupAclMenuData|raw }};
        _app.dependencies.userGroupAclUser = {{ userGroupAclUserData|raw }};
    </script>
{% endblock %}

{% block header_container %}
    {% include 'AppBundle:partial:entity-detail.html.twig' with {
        'object': _conf['object'],
        'fields': _conf['fields']
    } %}
{% endblock %}

{% block javascripts %}
    {% javascripts output="assets/admin/user-group-acl/detail/js/local.js"
        '@BckAdminBundle/Resources/public/user-group-acl/detail/ts/dist/inline.bundle.js'
        '@BckAdminBundle/Resources/public/user-group-acl/detail/ts/dist/polyfills.bundle.js'
        '@BckAdminBundle/Resources/public/user-group-acl/detail/ts/dist/vendor.bundle.js'
        '@BckAdminBundle/Resources/public/user-group-acl/detail/ts/dist/main.bundle.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}