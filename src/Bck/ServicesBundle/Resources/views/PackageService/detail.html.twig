{% extends 'BckServicesBundle:BaseService:detail.html.twig' %}

{% block stylesheets %}
    {% stylesheets output="assets/services/package-service/detail/css/local.css"
    '@BckServicesBundle/Resources/public/package-service/detail/scss/dist/styles.css'
    '@dropzone_css'
    '@cropper_css'
    '@videojs_css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    <link rel="stylesheet" href="{{ asset('assets/vendor/blueimp-gallery/css/blueimp-gallery.min.css') }}" />
{% endblock %}

{% block head_javascripts %}
    {{ parent() }}

    {% set parentId = _conf['object']['id'] %}

    {% set packageServiceServiceData = render(controller(
        'BckServicesBundle:PackageServiceService:dataChild',
        {'parents': {'packageService': parentId}, 'responseType': 'json'}
    )) %}

    <script>
        _app.dependencies.packageServiceService = {{ packageServiceServiceData|raw }};
    </script>
{% endblock %}

{% block vendor_javascripts %}
    {{ parent() }}

    {% javascripts output="assets/services/package-service/detail/js/vendor.js"
        '@cropper_js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block javascripts %}
    {% javascripts output="assets/services/package-service/detail/js/local.js"
        '@BckServicesBundle/Resources/public/package-service/detail/ts/dist/inline.bundle.js'
        '@BckServicesBundle/Resources/public/package-service/detail/ts/dist/polyfills.bundle.js'
        '@BckServicesBundle/Resources/public/package-service/detail/ts/dist/vendor.bundle.js'
        '@BckServicesBundle/Resources/public/package-service/detail/ts/dist/main.bundle.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}