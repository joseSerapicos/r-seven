{% extends 'AppBundle:form:form-popup.html.twig' %}

{% block body %}
    {% set form = (form is defined ? form : (_form is defined ? _form : null)) %}
    {% set fields = (fields is defined ? fields : (_conf['fields'] is defined ? _conf['fields'] : null)) %}

    {% if (form and fields) %}
        {% for field in fields['form'] %}
            {% if field == 'shareToType' %}
                <div *ngIf="_formService.getObject().privacy == 'SHARED'"  class="row form-group">
                    {% include 'AppBundle:form:label.html.twig' with {
                        'formField': form[field],
                        'metadata': fields['metadata'][field]
                    } %}
                    <div class="col-sm-10"><div class="row">
                        <div class="col-sm-6">
                            {% include 'AppBundle:form:input.html.twig' with {
                                'field': field,
                                'formField': form[field],
                                'metadata': fields['metadata'][field]
                            } %}
                        </div>
                        <div *ngIf="_formService.getObject().{{field}} == 'USER'" class="col-sm-6">
                            {% include 'AppBundle:form:input.html.twig' with {
                                'field': 'shareUserObj',
                                'formField': form['shareUserObj'],
                                'metadata': fields['metadata']['shareUserObj']
                            } %}
                        </div>
                        <div *ngIf="_formService.getObject().{{field}} == 'USER_GROUP'"  class="col-sm-6">
                            {% include 'AppBundle:form:input.html.twig' with {
                                'field': 'userGroupObj',
                                'formField': form['userGroupObj'],
                                'metadata': fields['metadata']['userGroupObj']
                            } %}
                        </div>
                        <div *ngIf="_formService.getObject().{{field}} == 'STORE'"  class="col-sm-6">
                            {% include 'AppBundle:form:input.html.twig' with {
                                'field': 'storeObj',
                                'formField': form['storeObj'],
                                'metadata': fields['metadata']['storeObj']
                            } %}
                        </div>
                    </div></div>
                </div>
            {% elseif (field not in ['shareUserObj', 'userGroupObj', 'storeObj']) %}
                {% include 'AppBundle:form:field.html.twig' with {
                    'field': field,
                    'metadata': fields['metadata'][field],
                    'form': form
                } %}
            {% endif %}
        {% endfor %}
    {% endif %}
{% endblock %}