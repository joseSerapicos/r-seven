{% extends 'AppBundle::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets filter="scssphp" output="assets/entities/entity-group/detail/css/all.css"
        '@AppBundle/Resources/public/scss/select-box.scss'
        '@AppBundle/Resources/public/scss/choices-box.scss'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block head_javascripts %}
    {{ parent() }}
    {% set entityGroupEntityData = render(controller(
        'EntitiesBundle:EntityGroupEntity:dataChild',
        {'parents': {'entityGroup': _conf['object']['id']}}
    )) %}
    <script>
        _app.dependency.entityGroupEntity = {{ entityGroupEntityData|raw }};
    </script>
{% endblock %}

{% block header_container %}
    {% include 'AppBundle:partial:entity-detail.html.twig' with {
        'object': _conf['object'],
        'fields': _conf['fields']
    } %}
{% endblock %}

{% block body_container %}<div id="js_main"></div>{% endblock %}

{% block local_javascripts %}
    {% javascripts output="assets/entities/entity-group/detail/js/local.js"
        '@EntitiesBundle/Resources/public/entity-group/detail/webpack_generated/common.js'
        '@EntitiesBundle/Resources/public/entity-group/detail/webpack_generated/app.js'
        '@EntitiesBundle/Resources/public/entity-group/detail/webpack_generated/main.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}